{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@speclife/core": [
        "../core/src/index.ts"
      ],
      "@speclife/cli": [
        "../../packages/cli/src/index.ts"
      ],
      "@speclife/mcp-server": [
        "../../packages/mcp-server/src/index.ts"
      ]
    }
  },
  "references": [
    {
      "path": "../core"
    }
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
